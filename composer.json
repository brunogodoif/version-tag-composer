{
  "name": "brunogodoif/version-tag-composer",
  "type": "library",
  "description": "Generate composer application version tag.",
  "version": "1.0.0",
  "license": "MIT",
  "authors": [
    {
      "name": "Bruno Feliciano de Godoi",
      "email": "brunofgodoi@outlook.com.br"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "post-autoload-dump": "php ./src/add-commands-in-composer.php",
    "app-version": "php version-tag-get.php",
    "app-version-patch": "php version-tag-increment.php --mode=patch",
    "app-version-minor": "php version-tag-increment.php --mode=minor",
    "app-version-major": "php version-tag-increment.php --mode=major"
  }
}
